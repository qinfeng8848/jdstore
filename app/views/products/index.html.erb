<div class="row">
    <% @products.each do |product| %>
  <div class="col-xs-6 col-md-3">

    <div class="thumbnail">

      <% if product.image.present? %>

       <%= link_to( image_tag( product.image.thumb.url ),product_path(product)) %>

      <% else %>
        <%=link_to(image_tag("http://placehold.it/200x200&text=No Pic"),product_path(product) )%>
      <% end %>

      <div class="caption">

      </div>
    </div>
    <p ><%= product.title %><p>
    <p >$<%= product.price %></p>


  </div>
  <% end %>
</div>
